// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  dataMap   DataMap?
  menus     Menu[]
}

model DataMap {
  id         Int        @id @default(autoincrement())
  dataUrl    String
  dataType   String     @default("json")
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  paths      DataPath[]
  location   Location   @relation(fields: [locationId], references: [id])
  locationId Int        @unique
}

model DataPath {
  id         Int       @id @default(autoincrement())
  path       String
  column     String
  table      String
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  dataMap    DataMap   @relation(fields: [dataMapId], references: [id])
  dataMapId  Int
  dataPath   DataPath? @relation("DataPathToDataPath", fields: [dataPathId], references: [id])
  dataPathId Int?      @unique
  node       DataPath? @relation("DataPathToDataPath")
}

model Menu {
  id         Int        @id @default(autoincrement())
  date       DateTime
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  location   Location   @relation(fields: [locationId], references: [id])
  locationId Int
  items      MenuItem[]
}

model MenuItem {
  id        Int      @id @default(autoincrement())
  name      String
  price     Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  menu      Menu     @relation(fields: [menuId], references: [id])
  menuId    Int
}
